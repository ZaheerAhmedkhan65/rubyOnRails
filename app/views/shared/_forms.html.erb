<div class="my-5">
<%= form_with model: student do |form| %>
    <div class="row">
          <% if @student.errors.any? %>
              <div class="alert alert-danger" role="alert">
                      <% @student.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
              </div>
          <% end %>
    </div>
        <div class="row">               
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :first_name ,class:"mb-2" %>
                   <%= form.text_field :first_name , class:"form-control rounded-0 form-control-lg"%>
               </div>
           </div>
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :last_name ,class:"mb-2" %>
                   <%= form.text_field :last_name , class:"form-control rounded-0 form-control-lg"%>
               </div>
           </div>
        </div>
        <div class="row">
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :personal_email , class:"mb-2" %>
                   <%= form.email_field :personal_email , class:"form-control rounded-0 form-control-lg"%>
               </div>
           </div>
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :phone_number , class:"mb-2" %>
                   <%= form.text_field :phone_number , class:"form-control rounded-0 form-control-lg"%>
               </div>
           </div>
        </div>
        <div class="row">
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :repository_link , class:"mb-2"%>
                   <%= form.text_field :repository_link , class:"form-control rounded-0 form-control-lg" %>
               </div>
           </div>
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :page_link , class:"mb-2"%>
                   <%= form.text_field :page_link , class:"form-control rounded-0 form-control-lg" %>
               </div>
           </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
        <%= form.submit class:"btn btn-warning my-3 rounded-0"%>
        <%= link_to 'Back to Students', students_path ,class: "btn btn-outline-warning my-3 rounded-0"%>
            </div>
        </div>
<% end %>
</div>