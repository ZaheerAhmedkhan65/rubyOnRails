<div class="container">
<div class = "col-lg-12">
    <div class="card my-5 rounded-0">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Assignment Details</h2>   
    <div class="row">
      <div class="col-lg-6">
         <h3 class="mb-3">Assignment Information</h3>
         <p class="lead">
         <strong> Title : </strong>
         <%= @assignment.assignment_title %>
         </p>
         <p class="lead">
         <strong> Topic : </strong>
         <%= @assignment.assignment_topic %>
         </p>
         <p class="lead">
         <strong> Description : </strong>
         <%= @assignment.assignment_description %>
         </p>
      </div>
      
      <div class="col-lg-6">
         <h3 class="mb-3">Add Information</h3>
         <p class="lead">
         <strong> Due Date : </strong>
         <%= @assignment.due_date %>
         </p>
         <p class="lead">
         <strong> Current Week : </strong>
         <%= @assignment.assignment_week %>
         </p>
         <p class="lead">
         <strong> Related Link : </strong>
         <%= link_to 'Click' , @assignment.related_links %>
         </p>
      </div>
    
    </div>

    <%= link_to 'Edit Assignment', edit_assignment_path(@assignment), class: "btn btn-warning  rounded-0 btn-lg" %>
    <%= link_to 'Back to Assignments', assignments_path, class: "btn btn-outline-warning rounded-0 btn-lg" %>
</div>
</div>
</div>
</div>