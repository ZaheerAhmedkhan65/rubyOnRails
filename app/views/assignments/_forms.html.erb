<div class="my-5">
<%= form_with model: assignment do |form| %>
    <div class="row">
          <% if @assignment.errors.any? %>
              <div class="alert alert-danger" role="alert">
                  <ul>
                      <% @assignment.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                  </ul>
              </div>
          <% end %>
    </div>
        <div class="row">               
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :assignment_title ,class:"mb-2" %>
                   <%= form.text_field :assignment_title , class:"form-control rounded-0 form-control-lg"%>
               </div>
           </div>
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :due_date ,class:"mb-2" %>
                   <%= form.text_field :due_date , class:"form-control rounded-0 form-control-lg"%>
               </div>
           </div>
        </div>
        <div class="row">
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :assignment_topic , class:"mb-2" %>
                   <%= form.text_field :assignment_topic , class:"form-control rounded-0 form-control-lg"%>
               </div>
           </div>
           <div class="col-lg-6">
               <div class="form-group">
                   <%= form.label :related_links , class:"mb-2" %>
                   <%= form.text_field :related_links , class:"form-control rounded-0 form-control-lg"%>
               </div>
           </div>
        </div>
        <div class="row">
          <div class="col-lg-4">
               <div class="form-group">
                   <%= form.label :assignment_week , class:"mb-2"%>
                   <%= form.text_field :assignment_week , class:"form-control rounded-0 form-control-lg" %>
               </div>
           </div>
           <div class="col-lg-8">
               <div class="form-group">
                   <%= form.label :assignment_description , class:"mb-2"%>
                   <%= form.text_field :assignment_description , class:"form-control rounded-0 form-control-lg" %>
               </div>
           </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
        <%= form.submit class:"btn btn-warning my-3 rounded-0"%>
        <%= link_to 'Back to Assignments', assignments_path ,class: "btn btn-outline-warning my-3 rounded-0"%>
            </div>
        </div>
<% end %>
</div>